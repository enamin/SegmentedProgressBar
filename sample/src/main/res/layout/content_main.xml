<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.muneikh.sample.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.muneikh.SegmentedProgressBar
        android:id="@+id/spbAuto"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spbAuto"
        android:onClick="pause"
        android:text="Pause" />

    <Button
        android:id="@+id/resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spbAuto"
        android:layout_toRightOf="@+id/pause"
        android:onClick="resume"
        android:text="Resume" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spbAuto"
        android:layout_toRightOf="@+id/resume"
        android:onClick="reset"
        android:text="Reset" />

    <Button
        android:id="@+id/addDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spbAuto"
        android:layout_toRightOf="@+id/reset"
        android:onClick="addDivider"
        android:text="Divider" />

    <com.muneikh.SegmentedProgressBar
        android:id="@+id/spbManual"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/addDivider" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spbManual"
        android:max="100" />

</RelativeLayout>
